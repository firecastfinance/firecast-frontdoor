---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTA from '../components/CTA.astro';
---
<BaseLayout title="Firecast — Plan your retirement with confidence">
  <section class="hero grid two">
    <div>
      <div class="badge">SaaS for UK retirement & FIRE</div>
      <h1>Plan your retirement with confidence.</h1>
      <p class="lead">Firecast uses realistic <strong>Monte Carlo simulations</strong> so you can stress‑test your plan across thousands of market scenarios.</p>
      <CTA />
    </div>
    <div>
      <div style="background:#f2f6fb;border:1px solid #e9edf4;border-radius:12px;height:260px;display:flex;align-items:center;justify-content:center">
        <div>Hero visual placeholder</div>
      </div>
    </div>
  </section>
</BaseLayout>
